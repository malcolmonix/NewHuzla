{
  "name": "huzla",
  "version": "1.0.0",
  "description": "Huzla Service Marketplace - A platform connecting service providers with customers",
  "private": true,
  "workspaces": [
    "backend",
    "frontend/web",
    "frontend/mobile"
  ],
  "scripts": {
    "setup": "powershell -ExecutionPolicy Bypass -File setup.ps1",
    "dev": "powershell -ExecutionPolicy Bypass -File run-dev.ps1",
    "install:all": "npm install && npm run install:backend && npm run install:web && npm run install:mobile",
    "install:backend": "cd backend && npm install",
    "install:web": "cd frontend/web && npm install",
    "install:mobile": "cd frontend/mobile && npm install",
    "build": "npm run build:backend && npm run build:web",
    "build:backend": "cd backend && npm run build",
    "build:web": "cd frontend/web && npm run build",
    "test": "npm run test:backend && npm run test:web && npm run test:mobile",
    "test:backend": "cd backend && npm test",
    "test:web": "cd frontend/web && npm test",
    "test:mobile": "cd frontend/mobile && npm test",
    "lint": "npm run lint:backend && npm run lint:web && npm run lint:mobile",
    "lint:backend": "cd backend && npm run lint",
    "lint:web": "cd frontend/web && npm run lint",
    "lint:mobile": "cd frontend/mobile && npm run lint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/huzla.git"
  },
  "keywords": [
    "marketplace",
    "services",
    "react",
    "react-native",
    "nodejs",
    "typescript",
    "express"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/yourusername/huzla/issues"
  },
  "homepage": "https://github.com/yourusername/huzla#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
